<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.redlink.smarti</groupId>
        <artifactId>smarti</artifactId>
        <version>0.4.1-SNAPSHOT</version>
    </parent>

    <artifactId>smarti-dist</artifactId>
    <name>smarti :: Distribution Packages</name>

    <properties>
        <binaryName>${finalName}</binaryName>
        <packageName>${finalName}</packageName>
        <daemonUser>smarti</daemonUser>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>smarti-application</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>smarti-application</artifactId>
            <version>${project.version}</version>
            <classifier>exec</classifier>
            <scope>runtime</scope>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <targetPath>main</targetPath>
            </resource>
            <resource>
                <directory>src/deb/resources</directory>
                <filtering>true</filtering>
                <targetPath>deb</targetPath>
            </resource>
            <resource>
                <directory>src/rpm/resources</directory>
                <filtering>true</filtering>
                <targetPath>rpm</targetPath>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <configuration>
                    <delimiters>
                        <delimiter>${*}</delimiter>
                        <delimiter>@{*}</delimiter>
                        <delimiter>@</delimiter>
                    </delimiters>
                    <overwrite>true</overwrite>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                    <skipIfEmpty>true</skipIfEmpty>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-install-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-deploy-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>pl.project13.maven</groupId>
                <artifactId>git-commit-id-plugin</artifactId>
                <executions>
                    <execution>
                        <id>git-id</id>
                        <goals>
                            <goal>revision</goal>
                        </goals>
                        <phase>initialize</phase>
                        <configuration>
                            <generateGitPropertiesFile>false</generateGitPropertiesFile>
                            <failOnNoGitDirectory>false</failOnNoGitDirectory>
                            <dateFormat>EEE, d MMM yyyy HH:mm:ss Z</dateFormat>
                            <gitDescribe>
                                <always>true</always>
                                <abbrev>8</abbrev>
                                <dirty> (modified)</dirty>
                            </gitDescribe>
                            <includeOnlyProperties>
                                <!-- Don't remove this, otherwise all non-git properties will be reset! -->
                                <includeOnlyProperty>.*</includeOnlyProperty>
                            </includeOnlyProperties>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>fetch-binary</id>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <phase>prepare-package</phase>
                        <configuration>
                            <outputDirectory>${project.build.directory}/dependency</outputDirectory>
                            <stripClassifier>true</stripClassifier>
                            <stripVersion>true</stripVersion>

                            <overWriteIfNewer>true</overWriteIfNewer>
                            <overWriteSnapshots>true</overWriteSnapshots>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>smarti-application</artifactId>
                                    <version>${project.version}</version>
                                    <classifier>exec</classifier>
                                    <destFileName>${binaryName}.jar</destFileName>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <execution>
                        <id>extract-3rd-party</id>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <phase>prepare-package</phase>
                        <configuration>
                            <outputDirectory>${project.build.directory}/dependency</outputDirectory>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>smarti-application</artifactId>
                                    <version>${project.version}</version>
                                    <includes>**/THIRD-PARTY.txt,**/3rdPartyLicenses.json</includes>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>deb</id>
            <activation>
                <property>
                    <name>deb</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.vafer</groupId>
                        <artifactId>jdeb</artifactId>
                        <executions>
                            <execution>
                                <id>jdeb</id>
                                <goals><goal>jdeb</goal></goals>
                                <phase>package</phase>
                                <configuration>
                                    <deb>${project.build.directory}/${packageName}_[[version]]-1_all.deb</deb>
                                    <changesOut>${project.build.directory}/${packageName}_[[version]]-1.changes</changesOut>
                                    <attach>false</attach>
                                    <controlDir>${project.basedir}/src/deb/debian</controlDir>
                                    <snapshotExpand>true</snapshotExpand>

                                    <dataSet>
                                        <!-- the main binary -->
                                        <data>
                                            <src>${project.build.directory}/dependency/${binaryName}.jar</src>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>./usr/share/${packageName}</prefix>
                                            </mapper>
                                        </data>
                                        <data>
                                            <src>${project.build.outputDirectory}/main/start.sh</src>
                                            <dst>${packageName}</dst>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <filemode>755</filemode>
                                                <prefix>./usr/share/${packageName}</prefix>
                                            </mapper>
                                        </data>
                                        <!-- /etc/defaults/ -->
                                        <data>
                                            <src>${project.build.outputDirectory}/main/default</src>
                                            <dst>/etc/default/${packageName}</dst>
                                            <type>file</type>
                                            <conffile>true</conffile>
                                        </data>
                                        <data>
                                            <src>${project.build.outputDirectory}/main/systemd.service</src>
                                            <dst>${packageName}.service</dst>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>./lib/systemd/system</prefix>
                                            </mapper>
                                        </data>
                                        <data>
                                            <src>${project.build.outputDirectory}/main</src>
                                            <type>directory</type>
                                            <conffile>true</conffile>
                                            <includes>application.properties,logback.xml</includes>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>./etc/${packageName}</prefix>
                                            </mapper>
                                        </data>
                                        <!-- directories -->
                                        <data>
                                            <type>template</type>
                                            <paths>
                                                <path>/var/lib/${packageName}</path>
                                                <!--<path>/var/lib/${packageName}/ext</path>-->
                                            </paths>
                                            <mapper>
                                                <type>perm</type>
                                                <user>${daemonUser}</user>
                                                <group>${daemonUser}</group>
                                            </mapper>
                                        </data>
                                        <data>
                                            <src>${project.build.outputDirectory}/main/plugin-info.txt</src>
                                            <dst>README.txt</dst>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>./var/lib/${packageName}/ext</prefix>
                                            </mapper>
                                        </data>
                                        <data>
                                            <type>template</type>
                                            <paths>
                                                <path>/var/log/${packageName}</path>
                                            </paths>
                                            <mapper>
                                                <type>perm</type>
                                                <user>${daemonUser}</user>
                                            </mapper>
                                        </data>
                                        <data>
                                            <type>link</type>
                                            <linkName>/var/lib/${packageName}/application.properties</linkName>
                                            <linkTarget>/etc/${packageName}/application.properties</linkTarget>
                                        </data>
                                        <data>
                                            <type>link</type>
                                            <linkName>/var/lib/${packageName}/logback.xml</linkName>
                                            <linkTarget>/etc/${packageName}/logback.xml</linkTarget>
                                        </data>
                                        <data>
                                            <type>link</type>
                                            <linkName>/var/lib/${packageName}/logs</linkName>
                                            <linkTarget>../../log/${packageName}</linkTarget>
                                        </data>
                                        <!-- doc -->
                                        <data>
                                            <src>${project.build.outputDirectory}/main</src>
                                            <type>directory</type>
                                            <includes>copyright</includes>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>./usr/share/doc/${packageName}</prefix>
                                            </mapper>
                                        </data>
                                        <data>
                                            <src>${project.build.outputDirectory}/deb</src>
                                            <type>directory</type>
                                            <includes>changelog*</includes>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>./usr/share/doc/${packageName}</prefix>
                                            </mapper>
                                        </data>
                                        <data>
                                            <src>${project.build.directory}/dependency/public/THIRD-PARTY.txt</src>
                                            <type>file</type>
                                            <mapper>
                                                <type>perm</type>
                                                <prefix>./usr/share/doc/${packageName}</prefix>
                                            </mapper>
                                        </data>
                                    </dataSet>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>rpm</id>
            <activation>
                <property>
                    <name>rpm</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>rpm-maven-plugin</artifactId>
                        <extensions>false</extensions>
                        <executions>
                            <execution>
                                <id>build-rpm</id>
                                <goals>
                                    <goal>rpm</goal>
                                </goals>
                                <phase>prepare-package</phase>
                            </execution>
                        </executions>
                        <configuration>
                            <name>${packageName}</name>
                            <summary>${project.parent.name}</summary>
                            <description>${project.parent.description}</description>
                            <packager>${project.organization.name} &lt;hello@redlink.co&gt;</packager>
                            <license>Proprietary</license>
                            <group>Development/Tools</group>
                            <icon>src/main/resources/icon.gif</icon>
                            <prefix>/usr/share/${packageName}</prefix>
                            <changelogFile>${project.build.outputDirectory}/rpm/changelog</changelogFile>

                            <!-- dependencies -->
                            <prereqs>
                                <require>/usr/bin/getent</require>
                                <require>/usr/sbin/useradd</require>
                                <require>/usr/sbin/groupadd</require>
                            </prereqs>
                            <requires>
                                <require>java-1.8.0-headless</require>
                            </requires>

                            <!-- mappings -->
                            <defaultDirmode>755</defaultDirmode>
                            <defaultFilemode>644</defaultFilemode>
                            <defaultGroupname>root</defaultGroupname>
                            <defaultUsername>root</defaultUsername>
                            <mappings>

                                <!-- the main binary -->
                                <mapping>
                                    <sources>
                                        <source>
                                            <location>${project.build.directory}/dependency/${binaryName}.jar</location>
                                        </source>
                                    </sources>
                                    <directory>/usr/share/${packageName}</directory>
                                </mapping>
                                <mapping>
                                    <sources>
                                        <source>
                                            <location>${project.build.outputDirectory}/main/start.sh</location>
                                            <destination>${packageName}</destination>
                                        </source>
                                    </sources>
                                    <directory>/usr/share/${packageName}</directory>
                                    <filemode>755</filemode>
                                </mapping>

                                <!-- defaults -->
                                <mapping>
                                    <sources>
                                        <source>
                                            <location>${project.build.outputDirectory}/main/default</location>
                                            <destination>${packageName}</destination>
                                        </source>
                                    </sources>
                                    <directory>/etc/default</directory> <!-- TODO: I think should be /etc/sysconfig -->
                                    <configuration>noreplace</configuration>
                                    <directoryIncluded>false</directoryIncluded>
                                </mapping>

                                <mapping>
                                    <sources>
                                        <source>
                                            <location>${project.build.outputDirectory}/main/systemd.service</location>
                                            <destination>${packageName}.service</destination>
                                        </source>
                                    </sources>
                                    <directory>/usr/lib/systemd/system</directory>
                                    <directoryIncluded>false</directoryIncluded>
                                </mapping>
                                <mapping>
                                    <sources>
                                        <source>
                                            <location>${project.build.outputDirectory}/rpm/init-d.sh</location>
                                            <destination>${packageName}</destination>
                                        </source>
                                    </sources>
                                    <directory>/etc/init.d</directory>
                                    <filemode>755</filemode>
                                    <configuration>true</configuration>
                                    <directoryIncluded>false</directoryIncluded>
                                </mapping>

                                <!-- configuration -->
                                <mapping>
                                    <sources>
                                        <source>
                                            <location>${project.build.outputDirectory}/main/logback.xml</location>
                                        </source>
                                        <source>
                                            <location>${project.build.outputDirectory}/main/application.properties</location>
                                        </source>
                                    </sources>
                                    <directory>/etc/${packageName}</directory>
                                    <configuration>noreplace</configuration>
                                </mapping>

                                <!-- directories -->
                                <mapping>
                                    <directory>/var/log/${packageName}</directory>
                                    <filemode>755</filemode>
                                    <username>${daemonUser}</username>
                                    <groupname>root</groupname>
                                </mapping>
                                <mapping>
                                    <directory>/var/lib/${packageName}</directory>
                                    <filemode>755</filemode>
                                    <username>${daemonUser}</username>
                                    <groupname>${daemonUser}</groupname>
                                </mapping>
                                <mapping>
                                    <directory>/var/lib/${packageName}/ext</directory>
                                    <filemode>755</filemode>
                                </mapping>
                                <mapping>
                                    <sources>
                                        <source>
                                            <location>${project.build.outputDirectory}/main/plugin-info.txt</location>
                                            <destination>README.txt</destination>
                                        </source>
                                    </sources>
                                    <directory>/var/lib/${packageName}/ext</directory>
                                </mapping>
                                <mapping>
                                    <directory>/var/lib/${packageName}</directory>
                                    <sources>
                                        <softlinkSource>
                                            <location>../../../etc/${packageName}/application.properties</location>
                                        </softlinkSource>
                                        <softlinkSource>
                                            <location>../../../etc/${packageName}/logback.xml</location>
                                        </softlinkSource>
                                    </sources>
                                </mapping>

                                <!-- documentation -->
                                <mapping>
                                    <sources>
                                        <source>
                                            <location>${project.build.outputDirectory}/main/copyright</location>
                                        </source>
                                        <source>
                                            <location>${project.build.directory}/dependency/public/THIRD-PARTY.txt</location>
                                        </source>
                                    </sources>
                                    <directory>/usr/share/doc/${packageName}</directory>
                                    <documentation>true</documentation>
                                </mapping>
                            </mappings>

                            <!-- scripts -->
                            <preinstallScriptlet>
                                <scriptFile>${project.build.outputDirectory}/rpm/preinst</scriptFile>
                                <fileEncoding>utf-8</fileEncoding>
                            </preinstallScriptlet>
                            <postinstallScriptlet>
                                <scriptFile>${project.build.outputDirectory}/rpm/postinst</scriptFile>
                                <fileEncoding>utf-8</fileEncoding>
                            </postinstallScriptlet>
                            <preremoveScriptlet>
                                <scriptFile>${project.build.outputDirectory}/rpm/prerm</scriptFile>
                                <fileEncoding>utf-8</fileEncoding>
                            </preremoveScriptlet>
                            <postremoveScriptlet>
                                <scriptFile>${project.build.outputDirectory}/rpm/postrm</scriptFile>
                                <fileEncoding>utf-8</fileEncoding>
                            </postremoveScriptlet>

                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>